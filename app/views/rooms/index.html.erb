<h1><%= t('layout.rooms') %></h1>
<br>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Location</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.title %></td>
        <td><%= room.location %></td>
        <td><%= room.description %></td>
        <td><%= link_to t('rooms.show'), room %></td>
        <td><%= link_to t('rooms.edit'), edit_room_path(room) %></td>
        <td><%= link_to t('rooms.destroy'), room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('rooms.new'), new_room_path %>
